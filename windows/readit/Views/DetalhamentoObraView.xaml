<UserControl x:Class="readit.Views.DetalhamentoObraView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:readit.Views"
             xmlns:l="clr-namespace:readit"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="#14171C"
             FontFamily="pack://application:,,,/Fonts/#Roboto"
             mc:Ignorable="d"
             d:DesignHeight="1000" d:DesignWidth="1400">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter" />
        <l:BoolToColorConverter x:Key="BoolToColorConverter" />
        <l:StarConverter x:Key="StarConverter" />
        <l:ShowCommaVisibilityConverter x:Key="ShowCommaVisibilityConverter" />
        <l:BoolToBookmarkTextConverter x:Key="BoolToBookmarkTextConverter" />
        <l:HoverAndFillConverter x:Key="HoverAndFillConverter" />
        <Style x:Key="HoverableButtonStyleGenres" TargetType="Button" BasedOn="{StaticResource NoBackgroundButtonStyle}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="LightGray" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="White" BorderThickness="1" CornerRadius="5" Width="100" Height="30">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Gray" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70" />
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Menu Lateral -->
        <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="5" Orientation="Vertical" HorizontalAlignment="Left" Background="#14213D" Width="70" VerticalAlignment="Stretch">
            <TextBlock Grid.Column="1" Grid.Row="1" Text="READ&#10;  IT" Foreground="White" FontFamily="pack://application:,,,/Fonts/#Irish Grover" HorizontalAlignment="Center" FontSize="20" Margin="0 20 0 40" />
            <Button x:Name="PaginaInicial" Style="{StaticResource MaterialDesignFlatButton}" Width="70" Height="70" Foreground="White" ToolTip="Página Inicial">
                <materialDesign:PackIcon Kind="Home" Width="27" Height="30" />
            </Button>
            <Button x:Name="SelecionarCadastro" Style="{StaticResource MaterialDesignFlatButton}" Width="70" Height="70" Foreground="White" Visibility="{Binding ExibirMenuAdministrador, Converter={StaticResource VisibilityConverter}}" ToolTip="Gerenciar Cadastros">
                <materialDesign:PackIcon Kind="PlusCircleOutline" Width="27" Height="30" />
            </Button>
            <Button Style="{StaticResource MaterialDesignFlatButton}" Width="70" Height="70" Foreground="White" ToolTip="Procurar Obras">
                <materialDesign:PackIcon Kind="Magnify" Width="27" Height="30" />
            </Button>
            <Button Style="{StaticResource MaterialDesignFlatButton}" Width="70" Height="70" Foreground="White" Visibility="Collapsed" ToolTip="Detalhes da Obra">
                <materialDesign:PackIcon Kind="FormatListBulleted" Width="27" Height="30" />
            </Button>
            <Button Style="{StaticResource MaterialDesignFlatButton}" Width="70" Height="70" Content="1/18" Foreground="White" FontFamily="pack://application:,,,/Fonts/#Irish Grover" FontSize="20" Visibility="Collapsed" />
            <Button Style="{StaticResource MaterialDesignFlatButton}" Width="70" Height="70" Foreground="White" Visibility="Collapsed" ToolTip="Bookmarks">
                <materialDesign:PackIcon Kind="Bookmark" Width="27" Height="30" />
            </Button>
            <Button x:Name="EditarPerfil" Style="{StaticResource MaterialDesignFlatButton}" Width="70" Height="70" Foreground="White" ToolTip="Editar Perfil">
                <materialDesign:PackIcon Kind="Account" Width="27" Height="30" />
            </Button>
            <Button Style="{StaticResource MaterialDesignFlatButton}" Width="70" Height="70" Foreground="White" ToolTip="Realizar Logoff">
                <materialDesign:PackIcon Kind="Power" Width="27" Height="30" />
            </Button>
        </StackPanel>

        <ScrollViewer Grid.Column="2" Grid.Row="0" x:Name="MainScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="{Binding Loading, Converter={StaticResource VisibilityConverter}}" Background="#14213D" Loaded="Grid_Loaded">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image x:Name="GifImage" Source="..\Images\loading-gif.gif" Width="35" Height="35" Margin="0 0 10 5" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding AnimatedText}"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="White">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AnimatedText}" Value="">
                                        <Setter Property="Opacity" Value="0"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AnimatedText}">
                                        <Setter Property="Opacity" Value="1"/>
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    </StackPanel>
                </Grid>
                <Viewbox Stretch="UniformToFill" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="560" Visibility="{Binding ExibirSecoes, Mode=TwoWay}">
                    <Image Source="{Binding DadosDetalhesObra.Image}"
                    Opacity="0.5"
                    RenderOptions.BitmapScalingMode="HighQuality">
                        <Image.Effect>
                            <BlurEffect Radius="3" />
                        </Image.Effect>
                    </Image>
                </Viewbox>
                <Grid HorizontalAlignment="Center" Visibility="{Binding ExibirSecoes, Mode=TwoWay}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="800" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="300" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="220" />
                    </Grid.RowDefinitions>

                    <Viewbox Grid.Column="1" Grid.Row="1" Grid.RowSpan="7" Stretch="UniformToFill" HorizontalAlignment="Stretch">
                        <Image Source="{Binding DadosDetalhesObra.Image}" Height="300" VerticalAlignment="Stretch" />
                    </Viewbox>

                    <Button Grid.Column="1" Grid.Row="9" Height="50" x:Name="RealizarBookmarkObra"
                    materialDesign:ButtonAssist.CornerRadius="5" Background="White"
                    HorizontalAlignment="Stretch" VerticalAlignment="Top"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <!-- DataTrigger para alterar o estilo com base no valor do Binding -->
                                    <DataTrigger Binding="{Binding DadosDetalhesObra.Bookmark}" Value="True">
                                        <Setter Property="Foreground" Value="Orange" />
                                        <Setter Property="Background" Value="White" />
                                    </DataTrigger>
                                    <!-- DataTrigger para restaurar o estilo quando for False -->
                                    <DataTrigger Binding="{Binding DadosDetalhesObra.Bookmark}" Value="False">
                                        <Setter Property="Foreground" Value="Black" />
                                        <Setter Property="Background" Value="White" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Grid.Column="0" Width="24" Height="24" Kind="Bookmark"
                                 Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                            <TextBlock Grid.Column="1" Text="{Binding DadosDetalhesObra.Bookmark, Mode=TwoWay, Converter={StaticResource BoolToBookmarkTextConverter}}"
                   FontSize="18" Margin="5 0 0 0" />
                        </StackPanel>
                    </Button>

                    <Border Grid.Column="1" Grid.Row="11" BorderBrush="#ADACAC" BorderThickness="1" CornerRadius="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="135" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                            </Grid.RowDefinitions>

                            <!-- Linha para Status -->
                            <TextBlock Grid.Column="1" Grid.Row="0" Text="Status" FontSize="19" Foreground="#ADACAC" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="2" Grid.Row="0" Text="{Binding DadosDetalhesObra.Status}" FontSize="19" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" />

                            <!-- Linha para Tipo -->
                            <TextBlock Grid.Column="1" Grid.Row="1" Text="Tipo" FontSize="19" Foreground="#ADACAC" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding DadosDetalhesObra.Type}" FontSize="19" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" />

                            <!-- Linha para Postado por -->
                            <TextBlock Grid.Column="1" Grid.Row="2" Text="Postado por" FontSize="19" Foreground="#ADACAC" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="2" Grid.Row="2" Text="{Binding DadosDetalhesObra.PostedBy}" FontSize="19" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" />

                            <!-- Linha para Lançado em -->
                            <TextBlock Grid.Column="1" Grid.Row="3" Text="Lançado em" FontSize="19" Foreground="#ADACAC" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="2" Grid.Row="3" Text="{Binding DadosDetalhesObra.SeriesReleasedDate}" FontSize="19" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" />

                            <!-- Linha para Atualizado em -->
                            <TextBlock Grid.Column="1" Grid.Row="4" Text="Atualizado em" FontSize="19" Foreground="#ADACAC" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="2" Grid.Row="4" Text="{Binding DadosDetalhesObra.SeriesLastUpdatedDate}" FontSize="19" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" />

                            <!-- Linha para Views -->
                            <TextBlock Grid.Column="1" Grid.Row="5" Text="Views" FontSize="19" Foreground="#ADACAC" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="2" Grid.Row="5" Text="{Binding DadosDetalhesObra.Views}" FontSize="19" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        </Grid>
                    </Border>

                    <TextBlock Grid.Column="3" Grid.Row="1" Text="{Binding DadosDetalhesObra.Title}" FontSize="32" Foreground="White" />

                    <ItemsControl Grid.Column="3" Grid.Row="3" ItemsSource="{Binding DadosDetalhesObra.Tags}">
                        <ItemsControl.ItemsPanel>
                            <!-- Define o painel para organizar os itens lado a lado -->
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.GenreClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}" Style="{StaticResource HoverableButtonStyleGenres}"
                                Margin="0 0 3 0">
                                    <TextBlock Text="{Binding}"
                                    FontSize="16"  />
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="5">
                        <ItemsControl ItemsSource="{Binding StarRatings}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="★"
                                    FontSize="30"
                                    Cursor="Hand"
                                    MouseEnter="Star_MouseEnter"
                                    MouseLeave="Star_MouseLeave">
                                        <TextBlock.InputBindings>
                                            <MouseBinding Gesture="LeftClick"
                                            Command="{Binding DataContext.StarClickedCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding StarIndex}" />
                                        </TextBlock.InputBindings>

                                        <TextBlock.Foreground>
                                            <MultiBinding Converter="{StaticResource HoverAndFillConverter}">
                                                <Binding Path="IsHovered" />
                                                <Binding Path="IsFilled" />
                                            </MultiBinding>
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="{Binding DadosDetalhesObra.Rating}"
                        Margin="5,0,0,0"
                        FontSize="16"
                        Foreground="White"
                        VerticalAlignment="Center" />
                    </StackPanel>

                    <TextBlock Grid.Column="3" Grid.Row="7" Text="{Binding DadosDetalhesObra.Description}" FontSize="20" Foreground="White" TextWrapping="Wrap" />

                    <TextBox Grid.Column="3" Grid.Row="7" Background="LightGray" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="50" Style="{StaticResource MaterialDesignOutlinedTextBox}" Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="13" materialDesign:HintAssist.Hint="Procure pelos capítulos" />

                    <ScrollViewer Grid.Column="3" Grid.Row="9" Grid.RowSpan="3">
                            <ItemsControl ItemsSource="{Binding FilteredCapitulos}" >
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <!-- Define o layout com 2 colunas -->
                                        <UniformGrid Columns="4" Rows="5" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button BorderBrush="#D9D9D9" Background="Transparent" Foreground="White" Height="60" Margin="0 0 5 0"
                                                Command="{Binding DataContext.ChapterClickedCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}">
                                            <StackPanel Orientation="Vertical">
                                                <!-- Dado superior -->
                                                <TextBlock Text="{Binding Chapter}" FontSize="14" HorizontalAlignment="Center" />
                                                <!-- Dado inferior -->
                                                <TextBlock Text="{Binding TimeAgo}" FontSize="12" HorizontalAlignment="Center" Foreground="#A9A9A9" />
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </ScrollViewer>
        <materialDesign:Snackbar Grid.Column="2" x:Name="SnackbarFive" Background="{Binding CorMsgInfo, Mode=TwoWay}" ActionButtonPlacement="Inline" HorizontalAlignment="Right" VerticalAlignment="Top" IsActive="{Binding ExibirMensagem, Mode=TwoWay}" Height="90">
            <materialDesign:SnackbarMessage Content="{Binding MsgInfo, Mode=TwoWay}" />
        </materialDesign:Snackbar>
    </Grid>
</UserControl>
